<table class="table marginBottom0">
    <tr><th>Công ty</th><th>Tên Giải thưởng</th><th>Ảnh</th><th>Số tiền</th><th>Từ ngày</th><th>Đến ngày</th><th>Số lượng</th><th></th></tr>
    @foreach (var item in (PagedList<winning>)ViewBag.OnePage)
    {
        int? code_company = item.code_company != null ? item.code_company : 0;
        long? money = item.money != null ? item.money : 0;
        <tr style="border-bottom:1 solid #808080;">
            <td>@item.company</td>           
            <td>@item.name</td>
            <td>
                ảnh đại diện<br />
                <img src="@item.image" style="width:50px;height:50px;" /><br />
                ảnh to cover <br />
                <img src="@item.big_image" style="width:150px;height:80px;" /><br />
                
            </td>
            <td>@string.Format("{0:n0}", @item.money) đ</td>
            <td>@item.from_date</td>
            <td>@item.to_date</td>
            <td>@item.quantity</td>
            <td><a href="#" onclick="openwinning(@item.id,'@item.company',@code_company, '@item.name', '@item.image','@item.big_image','@item.image1','@item.image2','@item.image3',@money,'@item.from_date','@item.to_date',@item.quantity)">Sửa</a></td>
            <td><a href="#" onclick="confirmDelWinning(@item.id,'@item.name');">Xóa</a></td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)ViewBag.OnePage, page => Url.Action("Winning", new { page }))


