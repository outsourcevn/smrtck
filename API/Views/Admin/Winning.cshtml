@{
    ViewBag.Title = "Quản Lý Trúng Thưởng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>@ViewBag.Title</h2>
<script src="~/Scripts/ckeditor/ckeditor.js"></script>
