
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="col-md-12" style="min-height:200px;">
    <h1 style="text-align:center;">Đăng Nhập Quản Trị</h1>
    <h2 style="color:red;text-align:center;">@ViewBag.message</h2>
    <
    <div class="row" style="width:75%;top:25%;left:12%;background:#f4f4f4;color:#000000;position:relative;padding-left:5px;padding-right:5px;text-align:left;display:block;z-index:1002;" id="dv_user_comment">
       
        <div>
            <form class="form-horizontal" action="/Admin/SubmitLogin" method="post" id="register">
                <fieldset>
                    <legend class="text-center">Thông tin</legend>
                    <!-- Phone input-->
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="email">Điện thoại</label>
                        <div class="col-md-9">
                            <input id="phone" name="phone" type="text" placeholder="Nhập số điện thoại" class="form-control">
                        </div>
                    </div>
                    <!-- Phone input-->
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="email">Mật khẩu</label>
                        <div class="col-md-9">
                            <input id="pass" name="pass" type="password" placeholder="Nhập mật khẩu" class="form-control">
                        </div>
                    </div>
                    <input type="button" value="ĐĂNG NHẬP" class="btn btn-primary btn-block" onclick="submitF();" style="margin-bottom:5px;" />
                </fieldset>
            </form>
        </div>
    </div>
</div>
<script>
    function submitF() {
        if ($('#phone').val() == "") {
            alert("Nhập số điện thoại!");
            document.getElementById("phone").focus();
            return;
        }
        if ($('#pass').val() == "") {
            alert("Nhập mật khẩu!");
            document.getElementById("pass").focus();
            return;
        }
        document.getElementById("register").submit();
    }
</script>

